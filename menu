        new_lowCPUTo=$(NEWT_COLORS="${newtcols[@]} ${newtcols_error[@]}" whiptail --inputbox "$m0004 $lowCPUTo - Seguir o modelo HH:MM, Exemplo:22:30" 9 78 $lowCPUTo \
                --title "$m0026" --cancel-button "$m0016" --ok-button "$m0018" 3>&1 1>&2 2>&3)

