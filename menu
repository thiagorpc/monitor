}

edit_lowCPUFrom() {
        new_lowCPUFrom=$(NEWT_COLORS="${newtcols[@]} ${newtcols_error[@]}" whiptail --inputbox "$m0004 $lowCPUFrom - Seguir o modelo HH:MM, Exemplo:22:30" 9 78 $lowCPUFrom \
                --title "$m0025" --cancel-button "$m0016" --ok-button "$m0018" 3>&1 1>&2 2>&3)

