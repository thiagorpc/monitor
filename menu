        new_threadMax=$(NEWT_COLORS="${newtcols[@]} ${newtcols_error[@]}" whiptail --inputbox "$m0004 $threadMax" 9 78 $threadMax \
                --title "$m0023" --cancel-button "$m0016" --ok-button "$m0018" 3>&1 1>&2 2>&3)

        exitstatus=$?
